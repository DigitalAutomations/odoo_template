<odoo>
    <record id="aliquid_sale_form_view" model="ir.ui.view">
        <field name="name">aliquid.sale.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='confirmation_date']" position="after">
                <field name="project_id" string="Progetto"/>
                <field name="is_ordine_quadro" string="È Ordine Quadro"/>
            </xpath>
            <notebook position="before">
                <group>
                    <field name="summary" string="Descrizione Ordine"/>
                </group>
            </notebook>
            <xpath expr="//form/sheet/notebook/page/field/tree/field[@name='product_id']" position="attributes">
                <attribute name="options">{'no_create': True, 'no_create_edit':True}</attribute>
            </xpath>
            <xpath expr="//form/sheet/group/group/field[@name='partner_id']" position="attributes">
                <attribute name="options">{'no_create': True, 'no_create_edit':True}</attribute>
            </xpath>
            <xpath expr="//button[@name='action_unlock']" position="after">
                <button name="crea_pacchetto" string="Crea Pacchetto" type="object" class="" attrs="{'invisible': ['|',('vendita_pacchetto_ore','=', False),('counter_pacchetti_ore', '>', 0)]}"/>
            </xpath>
            <xpath expr="//field[@name='payment_term_id']" position="after">
                <field string="Vendita pacchetto ore" name="vendita_pacchetto_ore" />
                <field name="counter_pacchetti_ore" invisible="1"/>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page string="Pacchetti Ore">
                    <field name="pacchetti_ore_ids">
                        <tree>
                            <field name="name"  string="Nome"/>
                            <field name="partner_id"  string="Cliente"/>
                            <field name="order_id" string="Ordine" />
                            <field  name="description" string="Descrizione" />
                            <field  name="type" string="tipo"/>
                            <field  name="hours" string="Ore"/>
                            <field  name="ore_residue" string="Ore Residue"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

    <record id="aliquid_sale_tree_view" model="ir.ui.view">
        <field name="name">aliquid.sale.tree</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='amount_total']" position="before">
                <field name="amount_untaxed" string="Imponibile" sum="Totale Ordini"/>
            </xpath>
            <field name="user_id" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <field name="partner_id" position="after">
                <field name="summary" string="Descrizione Ordine"/>
                <field name="project_id" string="Progetto"/>
                <field name="is_ordine_quadro" string="È Ordine Quadro" invisible="1"/>
            </field>
        </field>
    </record>

    <record id="aliquid_quotation_tree_view" model="ir.ui.view">
        <field name="name">aliquid.sale.tree</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='amount_total']" position="before">
                <field name="amount_untaxed" string="Imponibile" sum="Totale Ordini"/>
            </xpath>
            <field name="user_id" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <field name="partner_id" position="after">
                <field name="summary" string="Descrizione Ordine"/>
                <field name="project_id" string="Progetto"/>
                <field name="is_ordine_quadro" string="È Ordine Quadro" invisible="1"/>
            </field>
        </field>
    </record>

    <record id="aliquid_order_search_view" model="ir.ui.view">
        <field name="name">aliquid.sale.search</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_sales_order_filter"/>
        <field name="arch" type="xml">
            <search position="inside">
                <field name="summary" string="Descrizione Ordine"/>
                <filter name="is_ordine_quadro" string="Ordini Quadro" domain="[('is_ordine_quadro', '=', True)]"/>
            </search>
        </field>
    </record>
</odoo>