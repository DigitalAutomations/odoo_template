<odoo>
    <record id="aliquid_hr_timesheet_line_search" model="ir.ui.view">
        <field name="name">aliquid.account.analytic.line.search</field>
        <field name="model">account.analytic.line</field>
        <field name="inherit_id" ref="hr_timesheet.hr_timesheet_line_search"/>
        <field name="arch" type="xml">
            <search position="inside">
                <filter string="Ore > 0" name="positive_unit_amount" domain="[('unit_amount', '>', 0)]"/>
            </search>
        </field>
    </record>

    <record id="hr_timesheet.timesheet_action_all" model="ir.actions.act_window">
        <field name="name">I Miei Fogli Ore</field>
        <field name="res_model">account.analytic.line</field>
        <field name="search_view_id" ref="addoons_aliquid.aliquid_hr_timesheet_line_search"/>
        <field name="domain">[('project_id', '!=', False)]</field>
        <field name="context">{
            'search_default_week':1,
            'search_default_groupby_employee':1,
            'search_default_groupby_project':1,
            'search_default_groupby_task':1,
            }</field>
    </record>

    <record id="hr_timesheet.act_hr_timesheet_line" model="ir.actions.act_window">
        <field name="name">My Timesheets</field>
        <field name="res_model">account.analytic.line</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('project_id', '!=', False), ('user_id', '=', uid)]</field>
        <field name="context">{
            "search_default_week":1,
            'search_default_positive_unit_amount':1,
            }</field>
        <field name="search_view_id" ref="addoons_aliquid.aliquid_hr_timesheet_line_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Record a new activity
            </p><p>
            You can register and track your workings hours by project every
            day. Every time spent on a project will become a cost and can be re-invoiced to
            customers if required.
        </p>
        </field>
    </record>
</odoo>