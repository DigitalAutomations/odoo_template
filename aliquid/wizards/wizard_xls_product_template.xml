<odoo>
    <record id="wizard_import_product_template_form" model="ir.ui.view">
        <field name="name">wizard_import_products</field>
        <field name="model">wizard.xls.product.template</field>
        <field name="arch" type="xml">
            <form string="Importa Prodotti">
                <sheet>
                    <group>
                        <field name="file" string="File (XLSX)"/>
                    </group>
                    <footer>
                        <button name="import_products" string="Importa Prodotti" class="btn btn-success" type="object"/>
                        <button name="delete_all" string="Cancella Prodotti" class="btn btn-danger" type="object"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>