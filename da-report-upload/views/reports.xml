<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- TREE VIEW -->
    <record id="da_reports_tree" model="ir.ui.view">
        <field name="name">da.reports.tree</field>
        <field name="model">da.reports</field>
        <field name="arch" type="xml">
            <tree>
                <field name="file_name"/>
                <field name="note"/>
                <field name="status"/>
                <field name="create_date"/>
            </tree>
        </field>
    </record>

    <!-- FORM -->
    <record id="da_reports_form" model="ir.ui.view">
        <field name="name">da.reports.form</field>
        <field name="model">da.reports</field>
        <field name="arch" type="xml">
            <form>
                <!-- <header>
                    <button
                        name        = "action_parse_report"
                        data-hotkey = "p"
                        string      = "Crea gli ordini"
                        type        = "object"
                    />
                </header> -->
                <sheet>
                    <group>
                            <field name="report" filename="file_name"/>
                            <field name="note"/>
                            <field name="sale_orders">
                                <tree>
                                    <field name="state" invisible="1"/>
                                    <field name="name" />
                                    <field name="date_order" />
                                    <field name="partner_id" />
                                    <field name="user_id" />
                                    <field name="amount_total" />
                                    <button type="object" name="get_formview_action" icon="fa-edit" context="{'form_view_initial_mode': 'edit','force_detailed_view': 'True'}"/>
                                </tree>
                            </field>
                            <field name="log_text" widget="html" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ACTIONS -->
    <record id="da_reports_action" model="ir.actions.act_window">
        <field name="name">Importa Ordini</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">da.reports</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Non sono presenti Report
            </p>
        </field>
    </record>

    <!-- MENU -->
    <menuitem id="da_reports_root"
        name="Importa Ordini"
        sequence="14"
        web_icon="da-report-upload,static/src/img/icon.png"
    />

    <menuitem id="da_reports_reports"
        name="Report"
        parent="da_reports_root"
        sequence="10"
        action="da_reports_action"
    />

    <!-- <menuitem id="flights_airline"
        name="Aereoporti"
        parent="da_reports_root"
        action="da_reports_action"
        sequence="10"
    /> -->

</odoo>
