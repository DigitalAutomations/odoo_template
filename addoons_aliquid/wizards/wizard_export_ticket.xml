<odoo>
    <record id="wizard_export_ticket_form" model="ir.ui.view">
        <field name="name">wizard_export_ticket_form</field>
        <field name="model">wizard.export.ticket</field>
        <field name="arch" type="xml">
            <form string="Resoconto TIcket">
                <sheet>
                    <group>
                        <field name="date_start" string="Data Inizio"/>
                        <field name="date_end" string="Data Fine"/>
                        <field name="show_only_failed" string="Mostra solo SLA falliti"/>
                    </group>
                    <footer>
                        <button name="stampa_resoconto" string="Conferma" class="btn btn-primary" type="object"/>
                        <button string="Cancella" class="btn-secondary" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="wizard_export_ticket_action" model="ir.actions.act_window">
        <field name="name">Resoconto Ticket XLS</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">wizard.export.ticket</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="model_helpdesk_ticket" />
        <field name="binding_view_types">form</field>
    </record>

    <menuitem id="menu_wizard_export_ticket"
                  name="Resoconto"
                  parent="helpdesk.helpdesk_menu_config"
                  sequence="2"
                  action="wizard_export_ticket_action"/>
</odoo>
