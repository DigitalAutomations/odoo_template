<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="aliquid_portal_tree_quotation" inherit_id="sale.portal_my_quotations">
        <xpath expr="//t/t/thead/tr/th[hasclass('text-center')]" position="before">
            <th class="text-center">Descrizione</th>
        </xpath>
        <xpath expr="//t/t/t/tr/td[hasclass('text-center')]" position="before">
            <td class="text-left"><span t-field="quotation.summary"/></td>
        </xpath>
    </template>

    <template id="aliquid_portal_tree_order" inherit_id="sale.portal_my_orders">
        <xpath expr="//t/t/thead/tr/th[hasclass('text-center')]" position="before">
            <th class="text-center">Descrizione</th>
        </xpath>
        <xpath expr="//t/t/t/tr/td[hasclass('text-center')]" position="before">
            <td class="text-left"><span t-field="order.summary"/></td>
        </xpath>
    </template>

    <template id="aliquid_portal_tree_invoice" inherit_id="account.portal_my_invoices">
        <xpath expr="//t/t/thead/tr/th[hasclass('d-none', 'd-md-table-cell')]" position="after">
            <th class="text-center">Descrizione</th>
        </xpath>
        <xpath expr="//t/t/tbody/t/tr/td[hasclass('d-none', 'd-md-table-cell')]" position="after">
            <td class="text-left"><span t-field="invoice.summary"/></td>
        </xpath>
    </template>

    <template id="aliquid_portal_tree_subscription" inherit_id="sale_subscription.portal_my_subscriptions">
        <xpath expr="//t/t/thead/tr/th[hasclass('text-center')]" position="before">
            <th class="text-center">Data Scadenza</th>
        </xpath>
        <xpath expr="//t/t/t/tr/td[hasclass('text-center')]" position="before">
            <td class="text-left"><span t-field="account.recurring_next_date"/></td>
        </xpath>
    </template>
</odoo>
