<odoo>
    <record id="aliquid_helpdesk_ticket_form" model="ir.ui.view">
        <field name="name">aliquid_helpdesk_ticket_form</field>
        <field name="model">helpdesk.ticket</field>
        <field name="inherit_id" ref="helpdesk.helpdesk_ticket_view_form"/>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page name="allegati" string="Allegati">
                    <group>
                        <field name="attachment_ids" nolabel="1" widget="many2many_binary"/>
                    </group>
                </page>
            </notebook>
            <field name="partner_email" position="before">
                <field name="partner_child_id" string="Contatti" options="{'no_create': True, 'no_create_edit':True}"/>
            </field>
        </field>
    </record>

    <record id="aliquid_helpdesk_tickets_view_search" model="ir.ui.view">
        <field name="name">aliquid_helpdesk_tickets_view_search</field>
        <field name="model">helpdesk.ticket</field>
        <field name="inherit_id" ref="helpdesk.helpdesk_tickets_view_search"/>
        <field name="arch" type="xml">
            <xpath expr="//search/field[@name='id']" position="replace">
            </xpath>
            <xpath expr="//search/field[@name='name']" position="before">
                <field name="id" string="ID Ticket"/>
            </xpath>
            <search position="inside">
                <filter name="create_date" string="Data Apertura" context="{'group_by':'create_date'}"/>
                <filter name="partner_id" string="Cliente" context="{'group_by':'partner_id'}"/>
            </search>
        </field>
    </record>

    <record id="aliquid_helpdesk_ticket_tree" model="ir.ui.view">
        <field name="name">aliquid_helpdesk_ticket_tree</field>
        <field name="model">helpdesk.ticket</field>
        <field name="inherit_id" ref="helpdesk.helpdesk_tickets_view_tree"/>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="replace">
                <tree string="Tutti i Ticket">
                    <field name="id" string="Numero"/>
                    <field name="name" string="Nome"/>
                    <field name="create_date" string="Creato il"/>
                    <field name="partner_id"/>
                    <field name="user_id"/>
                    <field name="stage_id"/>
                </tree>
            </xpath>
        </field>
    </record>
</odoo>